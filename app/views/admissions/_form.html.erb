<%= render 'shared/errors', obj: @admissions %>

    <div class = 'row'>
        <div class = 'col-xs-12'>
            <%= form_for(@admissions, :html => {class: "form-horizontal", role: "form"}) do |a| %>
                <div class = "form-group">
                     <div class = "control-label col-sm-2">                
                        <%= a.label :name %> 
                    </div>                
                        <div class = "col-sm-8">
                            <%= a.text_field :name, class: "form-control", placeholder: "Name of the student" , autofocus: true %>
                        </div>
                    </div>
                </div>
                
                    <div class = "form-group">
                        <div class = "control-label col-sm-2">   
                            <%= a.label :description %> 
                        </div>
                        <div class = "col-sm-8">
                            <%= a.text_area :description, rows: 10, class: "form-control",placeholder: "Description" %>
                        </div>
                    </div>

                        <div class = "form-group">
                            <div class = "col-sm-offset-2 col-sm-10 ">        
                            <br />                
                                <%= a.submit class: "btn btn-primary btn-lg" %>
                                     
                                
                            </div>
                        </div>
                        <div class = "form-group">
                            <div class = "col-xs-4 col-xs-offset-5">
                                 [ <%= link_to "back to admission", admissions_path %> ]
                             </div> 
                        </div>
                <% end%>          
            </div>  
        </div>   