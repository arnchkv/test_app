<h2 style = "text-align:center;"> TITLE: <%= @admissions.name %></h2>
<div class = "well col-xs-8 col-xs-offset-2">
<% if @admissions.user %>
    <ul class =  'listing'>
        <div class = "row center">
            <div class = " col-md-4 col-md-offset-4">
               <li> Created by: </li> 
                <li><%=link_to gravatar_for(@admissions.user), user_path(@admissions.user) %> </li>
                
                <li class = "article-title">
                <li><%=link_to @admissions.user.username, user_path(@admissions.user) %> </li> 
                <li><small><%= pluralize(@admissions.user.admissions.count," articles") if @admissions.user.admissions %></small></li>
          
            </div>
        </div>
    </ul>
<% end %>
        <h4 class = "center description"><strong>DESCRIPTION: </strong></h4>
        <hr>
            <%= simple_format(@admissions.description) %>
        <div class = "article-actions">
            <%= link_to "View all Admissions", admissions_path, class: "btn btn-xs btn-success" %> 
            <%= link_to "Edit", edit_admission_path(@admissions), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this admission", admission_path(@admissions), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-xs btn-danger" %>
        </div>
</div>