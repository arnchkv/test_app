<h1 style = "text-align: center;">Listing all Admissions</h1>

<% @admissions.each do |admit|%>
    <div class = "row">
        <div class = "col-xs-8 col-xs-offset-2">
            <div class = "well well-lg">
                <div class = "article-title">
                    <%= link_to admit.name, admission_path(admit) %>
                </div>
                <div class = "article-body">
                    <%= truncate(admit.description, length: 100) %>
                </div>
                     <div class = "article-actions">
                        <%= link_to "Edit", edit_admission_path(admit), class: "btn btn-xs btn-primary" %>
                        <%= link_to "Delete this admission", admission_path(admit), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-xs btn-danger" %>
                    </div>
                </div>
            </div>
        </div>
 <%end %>
