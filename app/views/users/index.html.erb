<h2 style = "text-align:center;">list of users:</h2>
<div class = "center">
<%= will_paginate %>
    <%= @users.each do |user| %>
        <ul class =  'listing'>
            <div class = "row">
                <div class = "well col-md-4 col-md-offset-4">
                    <li><%=link_to gravatar_for(user), user_path(user) %> </li>
                    <li class = "article-title">
                    <li><%=link_to user.username, user_path(user) %> </li> 
                    <li><small><%= pluralize(user.admissions.count," articles") if user.admissions %></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%=link_to "Delete User", user_path(user), method: :destroy, data: {confirm: "are you sure?"} %> </li> 
                    <% end %>
                </div>
            </div>
        </ul>
    <%end%>
    <%= will_paginate %>
</div>